// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// NextAuth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  VISITOR
  USER
  ADMIN
}

// Content Management
model Page {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String?
  content     Json     @default("{}")
  published   Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Project Lifecycle Phases
model Phase {
  id             String    @id @default(cuid())
  order          Int
  name           String
  shortName      String
  narrative      String    @db.Text
  entryCriteria  Json      @default("[]")
  exitGate       Json      @default("[]")
  toolLinks      Json      @default("[]")
  docuwareLinks  Json      @default("[]")
  ceremonyId     String?
  ceremony       Ceremony? @relation(fields: [ceremonyId], references: [id])
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

// Governance Ceremonies
model Ceremony {
  id           String   @id @default(cuid())
  name         String
  purpose      String   @db.Text
  participants Json     @default("[]")
  inputs       Json     @default("[]")
  outputs      Json     @default("[]")
  templateLink String?
  phases       Phase[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Tools & Stack
model Tool {
  id          String   @id @default(cuid())
  domain      String
  name        String
  description String   @db.Text
  whenToUse   String   @db.Text
  externalUrl String?
  docuwareRef String?
  icon        String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Allowed Domains for Access Control
model AllowedDomain {
  id          String      @id @default(cuid())
  domain      String      @unique
  accessLevel AccessLevel @default(USER)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

enum AccessLevel {
  USER
  ADMIN
}
